<h1>商品一覧画面</h1>
<li>
<%= link_to "新規登録",new_admin_item_path ,class: "btn btn-sm btn-success" %>
</li>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
     <th></th>
      <th>Name</th>
       <th>Introduction</th>
        <th>Price</th>
        </tr>
      </thead>
    <tbody>
  <% @items.each do |items| %>
    <tr>
      <td>
        <%= image_tag @item.ge_image(100,100) %>
        </td>
        <td>
          <%= items.name %>
        </td>
      <td>
       <%= items.introduction %>
      </td>
    <td>
     <p><%= items.introduction %>円</p>
     </td>
    </tr>
  <% end %>
</tbody>
</table>
